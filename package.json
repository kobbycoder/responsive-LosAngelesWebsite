{
  "name": "skilltest",
  "version": "1.0.0",
  "description": "Front End Developer Dynamic Skills Test V2",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "tailwindcss src/input.css -o dist/output.css",
    "watch:css": "tailwindcss src/input.css -o dist/output.css -w",
    "build:assets": "copyfiles -f src/img/**/* dist/img",
    "build:js": "copyfiles -f src dist/index.js",
    "build": "npm run build:css && npm run build:assets && npm run build:js",
    "start": "npx live-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kobbycoder/skilltest.git"
  },
