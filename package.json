  },
  "homepage": "https://github.com/kobbycoder/skilltest#readme",
  "dependencies": {
    "flowbite": "^1.6.5",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "tailwindcss": "^3.3.1"
  }
}
